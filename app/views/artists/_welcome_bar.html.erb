<%= link_to image_tag("/images/cropped_grape_logo_shadowed.png", :width => 130, :height => 130), '/users/index', id:"welcome_logo", method: :get %>

<div id="welcome_box">
  Welcome,
  <% if @user["display_name"] == nil %>
     <% name = @user["id"] %>
  <% else %>
    <% name = @user["display_name"].split(" ").first %>
  <% end %>
  <%= link_to name, 'http://open.spotify.com/user/' + @user["id"], id:"name_link", :target => "_blank" %>
</div>
