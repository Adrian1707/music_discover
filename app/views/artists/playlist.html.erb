<% artists_array = @recommended_spotify_artists[@recommended_spotify_users[0].id] %>
<% artist_name = artists_array[0].name %>
<% track = artists_array[0].albums.first.tracks.first %>
<% track_uri = track.uri%>
<% track_name = track.name %>

<div class="panel-group playlist_area" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title" id="clickable_track">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <%= track_name %> ----- <%= artist_name %>
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <iframe src="https://embed.spotify.com/?uri=<%= track_uri %>" width="100%" height="80"  frameborder="0" allowtransparency="true"></iframe>
      </div>
    </div>
  </div>
